<header class="perfil-header">
  <button data-back type="button" class="back-btn">
    <i class="fa-solid fa-arrow-left"></i>
  </button>
  <h2>Mi perfil</h2>
</header>

<section class="perfil-card">
  <div class="avatar">
    <img
      class="Foto-perfil"
      src="/imgs/userPhoto.jpg"
      alt="Foto de perfil"
    />
  </div>
  <h3>Usuario</h3>
  <p class="correo">usuario@email.com</p>
</section>

<section class="perfil-opciones">
  <button class="opcion">
    <i class="fa-solid fa-clipboard-list"></i>
    <span>Mis pedidos</span>
  </button>

  <button class="opcion">
    <i class="fa-solid fa-heart"></i>
    <span>Favoritos</span>
  </button>

  <button class="opcion">
    <i class="fa-solid fa-gear"></i>
    <span>Configuración</span>
  </button>

  <button class="opcion logout" id="logoutBtn">
    <i class="fa-solid fa-right-from-bracket"></i>
    <span>Cerrar sesión</span>
  </button>
</section>